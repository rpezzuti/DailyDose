<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigatiomn"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="rhett.pezzuti.dailydose.fragments.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/home_fragment">
        <action
            android:id="@+id/action_homeFragment_to_favoritesFragment"
            app:destination="@id/favoritesFragment" />
        <action
            android:id="@+id/action_homeFragment_to_uploadFragment"
            app:destination="@id/uploadFragment" />
        <action
            android:id="@+id/action_homeFragment_to_preferencesFragment"
            app:destination="@id/preferencesFragment" />
    </fragment>
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="rhett.pezzuti.dailydose.fragments.FavoritesFragment"
        android:label="FavoritesFragment"
        tools:layout="@layout/favorites_fragment"/>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="rhett.pezzuti.dailydose.fragments.AboutFragment"
        android:label="AboutFragment"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/infoFragment"
        android:name="rhett.pezzuti.dailydose.fragments.InfoFragment"
        android:label="fragment_info"
        tools:layout="@layout/fragment_info" />
    <fragment
        android:id="@+id/uploadFragment"
        android:name="rhett.pezzuti.dailydose.fragments.UploadFragment"
        android:label="UploadFragment"
        tools:layout="@layout/fragment_upload"/>
    <fragment
        android:id="@+id/preferencesFragment"
        android:name="rhett.pezzuti.dailydose.fragments.PreferencesFragment"
        android:label="fragment_preferences"
        tools:layout="@layout/fragment_preferences" />
</navigation>