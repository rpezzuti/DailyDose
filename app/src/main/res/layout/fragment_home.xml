<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="homeViewModelXML"
            type="rhett.pezzuti.dailydose.viewmodels.HomeViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        tools:context=".fragments.HomeFragment">

        <TextView
            android:id="@+id/tv_home_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_small"
            app:welcomeUser="@{homeViewModelXML.currentUser}"
            android:textColor="@color/black"
            android:textSize="44sp"
            android:textStyle="bold|italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_home_recent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_small"
            android:text="@string/text_recent_uploads"
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_welcome" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/magin_small"
            app:layout_constraintBottom_toTopOf="@+id/btn_upload"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_home_recent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_small"
            android:layout_marginBottom="8dp"
            android:onClick="@{() -> homeViewModelXML.navigateToUpload()}"
            android:text="@string/button_upload"
            app:layout_constraintBottom_toTopOf="@+id/btn_favorites"
            app:layout_constraintStart_toStartOf="@+id/btn_preferences" />

        <Button
            android:id="@+id/btn_clear_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/magin_small"
            android:text="@string/button_clear_all"
            android:onClick="@{() -> homeViewModelXML.onClear()}"
            app:layout_constraintBottom_toTopOf="@+id/btn_browse"
            app:layout_constraintEnd_toEndOf="@+id/btn_browse" />

        <Button
            android:id="@+id/btn_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/button_preferences"
            android:onClick="@{() -> homeViewModelXML.navigateToPreferences()}"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_favorites"
            app:layout_constraintEnd_toStartOf="@+id/btn_favorites"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:onClick="@{() -> homeViewModelXML.navigateToFavorites()}"
            android:text="@string/button_favorites"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_browse"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_preferences" />

        <Button
            android:id="@+id/btn_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_browse"
            android:onClick="@{() -> homeViewModelXML.navigateToBrowse()}"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_favorites"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/btn_favorites" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>